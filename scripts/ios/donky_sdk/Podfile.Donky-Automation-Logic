platform :ios, '7.0'

pod 'Donky-Automation-Logic'

post_install do |installer|
  require './cocoapod-to-cordova'

  build = CocoapodToCordovaBuilder.new('Donky-Automation-Logic', installer.project)
  build.root_path = File.expand_path(File.join('.', '../../../..'))
  build.destination = 'src/ios/Donky-Automation-Logic'
  build.configure({
    preserve_config_xml: true
  })
  build.update_plugin!
end

