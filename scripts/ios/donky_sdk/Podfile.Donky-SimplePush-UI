platform :ios, '7.0'

pod 'Donky-SimplePush-UI'

post_install do |installer|
  require './cocoapod-to-cordova'

  build = CocoapodToCordovaBuilder.new('Donky-SimplePush-UI', installer.project)
  build.root_path = File.expand_path(File.join('.', '../..'))
  build.destination = 'src/ios/Donky-SimplePush-UI'
  build.configure({
    preserve_config_xml: true
  })
  build.update_plugin!
end

