platform :ios, '7.0'

pod 'Donky-Push'

post_install do |installer|
  require './cocoapod-to-cordova'

  build = CocoapodToCordovaBuilder.new('Donky-Push', installer.project)
  build.root_path = File.expand_path(File.join('.', '../../../..'))
  build.destination = 'src/ios/Donky-Push'
  build.update_plugin!
end

